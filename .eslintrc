{
	"root": true,
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"airbnb-base",
		"plugin:prettier/recommended"
	],
	"plugins": [
		"prettier"
	],
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"printWidth": 120,
				"tabWidth": 2,
				"singleQuote": true,
				"trailingComma": "none",
				"arrowParens": "always",
				"semi": false,
				"endOfLine": "auto"
			}
		],
		"no-use-before-define": ["error", {
			"functions": true,
			"classes": true,
			"variables": false,
			"allowNamedExports": false
	}],
		"lines-between-class-members": 0,
		"no-console": 0,
		"class-methods-use-this": 0,
		"import/no-unresolved": 0,
		"no-param-reassign": 0,
		"no-plusplus": 0,
		"import/prefer-default-export": 0,
		"consistent-return": 0,
		"no-nested-ternary": 0,
		"no-multi-assign": 0
	}
}
